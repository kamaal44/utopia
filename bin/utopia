#!/bin/bash

printf '\033]2;Utopia Framework\a'

G="\033[1;34m[*] \033[0m"
S="\033[1;32m[+] \033[0m"
E="\033[1;31m[-] \033[0m"

if [[ -d ~/utopia ]]
then
cd ~/utopia
chmod +x utopia
./utopia
else
{
ASESR="$(ping -c 1 -q www.google.com >&/dev/null; echo $?)"
} &> /dev/null
if [[ "$ASESR" = 0 ]]
then 
cd ~
{
git clone https://github.com/EntySec/utopia.git
cd $OLDPWD
cd ~/utopia
} &> /dev/null
if [[ ! -d ~/utopia ]]
then
   echo -e ""$E"Execution failed!"
   exit
fi
chmod +x utopia
./utopia
else
echo -e ""$E"Execution failed!"
exit
fi
fi
